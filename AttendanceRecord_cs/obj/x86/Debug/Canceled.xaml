<Page
    x:Class="AttendanceRecord.Canceled"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AttendanceRecord"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:ConnectionId='2' x:Name="Back_MainPage" Style="{StaticResource NavigationBackButtonNormalStyle}"                         RenderTransformOrigin="0.84,-2.093"/>

        <StackPanel x:ConnectionId='3' x:Name="contentPanel" Margin="75,32,45,-2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock HorizontalAlignment="Left" Text="補講休校休暇設定" FontSize="36"/>
            <StackPanel Orientation="Horizontal" Height="600">
                <CalendarView Margin="300,0" Height="574.774" Width="568.527" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
                    <CalendarView.RenderTransform>
                        <CompositeTransform SkewX="0.2" TranslateX="1.048"/>
                    </CalendarView.RenderTransform>
                </CalendarView>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

